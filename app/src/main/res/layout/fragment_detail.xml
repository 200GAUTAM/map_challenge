<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/place_image_height"
            android:scaleType="centerCrop"
            android:background="@color/banner_img_bg"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/place_image_gradient_height"
            android:background="@drawable/banner_img_gradient"
            android:layout_gravity="bottom"/>

    </FrameLayout>

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="@dimen/content_padding"
            android:layout_marginTop="@dimen/dummy_view_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#000000"
                android:textSize="24sp"
                android:text="Something something"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="101 Cecil Street, Singapore 201983"
                android:textColor="@color/default_text_color"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="600dp"/>

        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ab_height"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_arrow_back_white"/>

</RelativeLayout>